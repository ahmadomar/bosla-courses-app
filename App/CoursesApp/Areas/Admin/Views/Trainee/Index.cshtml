@model IEnumerable<CoursesApp.Models.TraineeCourseModel>

@{
    ViewBag.Title = "Course Trainees";
}

<h2>Course Trainees</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Trainee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Trainee.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Registration_Date)
        </th>
        <th></th>
    </tr>

    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registration_Date)
                </td>
            </tr>
        }
    }
    else
    {
    <tr>
        <td colspan="4">
            <div class="alert alert-danger">
                There is no trainees found in this course!
            </div>
        </td>
    </tr>
    }

</table>
